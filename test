<!DOCTYPE html>
<html lang="ja">
<head>
<meta charset="UTF-8">
<title>位置情報テスト</title>
</head>
<body>
<h1>位置情報テスト</h1>
<div id="output"></div>

<script>
navigator.geolocation.getCurrentPosition(
  pos => {
    document.getElementById("output").innerHTML =
      "緯度: " + pos.coords.latitude + "<br>" +
      "経度: " + pos.coords.longitude;
  },
  err => {
    document.getElementById("output").innerHTML =
      "エラーコード: " + err.code + "<br>" +
      "メッセージ: " + err.message;
  },
  { enableHighAccuracy: true }
);
</script>
</body>
</html>
